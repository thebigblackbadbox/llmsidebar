{
    "manifest_version": 3,
    "name": "Gemini AI Sidebar",
    "version": "1.0.0",
    "description": "Chat with Google's Gemini AI in a beautiful sidebar interface",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js",
        "scripts": [
            "background.js"
        ],
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "sidebar.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "commands": {
        "toggle-sidebar": {
            "suggested_key": {
                "default": "Alt+Shift+R",
                "mac": "Alt+Shift+R"
            },
            "description": "Toggle Gemini AI Sidebar"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "popup.html",
                "icons/*",
                "popup.js",
                "history-manager.js",
                "command-system.js",
                "styles.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "gemini-sidebar@example.com"
        }
    }
}